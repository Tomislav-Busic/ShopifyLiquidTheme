<section>
  <div class="container">
    {% for block in section.blocks %}
      <div class="item">
        <div class="image">
          <div class="image-place">
            {% if block.image contains '/' %}
              {% assign images = block.image | split: '/' %}
              {% for image in images %}
                <img src="{{ image | asset_url }}" alt="{{ item.alt }}" />
              {% endfor %}
            {% else %}
              <img src="{{  block.image | asset_url }}"alt="{{ block.alt }}" />
            {% endif %}
          </div>
        </div>
        <div class="text-container">
          <h1>{{ block.title }}</h1>
          <p>{{ block.content }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>



